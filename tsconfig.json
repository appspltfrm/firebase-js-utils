{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": ["DOM", "ESNext"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "importHelpers": false
    },

    "exclude": [
        "dist",
        "node_modules"
    ]
}
